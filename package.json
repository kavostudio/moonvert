{
  "displayName": "Moonvert",
  "name": "moonvert",
  "description": "A desktop application for converting files between various formats.",
  "version": "1.0.0",
  "versionCodename": "Callisto",
  "main": "./node_modules/.dev/main/index.mjs",
  "resources": "src/resources",
  "git": {
    "owner": "kavostudio",
    "repository": "moonvert"
  },
  "author": {
    "name": "Kavo Studio",
    "slug": "kavostudio",
    "email": "thekavostudio@gmail.com"
  },
  "license": "AGPL-3.0-only",
  "packageManager": "pnpm@10.24.0",
  "pnpm": {
    "onlyBuiltDependenciesFile": "./trusted-dependencies-scripts.json"
  },
  "scripts": {
    "start": "electron-vite preview",
    "predev": "run-s clean:dev",
    "dev": "cross-env NODE_ENV=development electron-vite dev --watch",
    "compile:app": "electron-vite build",
    "compile:packageJSON": "tsx ./src/lib/electron-app/release/modules/prebuild.ts",
    "prebuild": "run-s clean:dev compile:app compile:packageJSON",
    "build": "pnpm electron-builder --publish never",
    "release:r2": "dotenv -e .env -- pnpm run electron-builder --publish always",
    "release:github": "gh release create v$npm_package_version --title \"v$npm_package_version\" --notes \"Download the official installer from https://moonvert.app\"",
    "build:full": "run-s build:binaries prebuild build",
    "postinstall": "run-s prebuild install:deps",
    "install:deps": "electron-builder install-app-deps",
    "make:release": "tsx ./src/lib/electron-app/release/modules/release.ts",
    "clean:dev": "rimraf ./node_modules/.dev",
    "lint": "biome check --no-errors-on-unmatched",
    "lint:fix": "biome check --write --no-errors-on-unmatched --assist-enabled=true",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"**/*.{ts,tsx,md,js,css,scss,js,jsx,json,yaml}\"",
    "python:setup": "bash scripts/setup-python.sh",
    "python:build": "bash scripts/build-python-darwin.sh",
    "pandoc:build": "bash scripts/build-pandoc-darwin.sh"
  },
  "dependencies": {
    "@imagemagick/magick-wasm": "^0.0.37",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-popover": "^1.1.15",
    "archiver": "^7.0.1",
    "cmdk": "^1.1.1",
    "electron-updater": "^6.3.1",
    "electron-window-state": "^5.0.3",
    "plist": "^3.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@tailwindcss/vite": "^4.1.17",
    "@types/archiver": "^7.0.0",
    "@types/node": "^24.10.1",
    "@types/plist": "^3.0.5",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/semver": "^7.7.1",
    "@vitejs/plugin-react": "^5.1.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "code-inspector-plugin": "^1.3.0",
    "cross-env": "^10.1.0",
    "effector": "^23.4.4",
    "effector-react": "^23.3.0",
    "effector-storage": "^7.1.0",
    "electron": "^39.2.6",
    "electron-builder": "^26.0.12",
    "electron-router-dom": "^2.1.0",
    "electron-vite": "^4.0.1",
    "lucide-react": "0.556.0",
    "motion": "^12.24.12",
    "npm-run-all": "^4.1.5",
    "open": "^11.0.0",
    "p-limit": "^7.2.0",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "radix-ui": "^1.4.3",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "react-dropzone": "^14.3.8",
    "react-router-dom": "^7.10.1",
    "rimraf": "^6.1.2",
    "rollup-plugin-inject-process-env": "^1.3.1",
    "semver": "^7.7.3",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.17",
    "tailwindcss-animate": "^1.0.7",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "^7.2.6",
    "vite-tsconfig-paths": "^5.1.4",
    "zod": "^4.3.5"
  }
}